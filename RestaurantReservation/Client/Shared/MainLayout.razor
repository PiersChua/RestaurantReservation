@inject NavigationManager Navigation
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth adjust">
                <form action="" class="searchbar">
                    <input type="text" name="search" placeholder="Book a Reservation now!">
                    <button type="submit" class="search"><img src="images/search.png"></button>
                </form>

            <AuthorizeView>
                <Authorized>
                    <div>
                        <a class="adjust-icon" href="authentication/profile">
                            <span class="oi oi-person" aria-hidden="true"></span>
                        </a>
                    </div>
               </Authorized>
                <NotAuthorized>
                    <div>
                        <a class="adjust-icon" href="authentication/register">
                            <span class="oi oi-person adjust-login" aria-hidden="true"></span>
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>

        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    private void BeginLogOut()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
