@page "/restaurant/create/{id:int}"
@inject HttpClient _client
@inject IJSRuntime js
@inject NavigationManager _navManager

<RestaurantApplicationFormComponent ButtonText="Approve" OnValidSubmit="ApproveApplication" RestaurantApplication="RA" />

@code {
    [Parameter] public int id { get; set; }

    RestaurantApplication? RA = new RestaurantApplication();
    Restaurant createdRestaurant = new Restaurant();

    protected async override Task OnParametersSetAsync()
    {
        RA = await _client.GetFromJsonAsync<RestaurantApplication>($"{Endpoints.RestaurantApplicationsEndpoint}/{id}");
    }

    async Task ApproveApplication()
    {
        createdRestaurant.Name = RA.RestaurantName;
        createdRestaurant.Cuisine = RA.Cuisine;
        createdRestaurant.PhoneNumber = RA.PhoneNumber;
        createdRestaurant.Email = RA.Email;
        createdRestaurant.Category = RA.Category;
        createdRestaurant.Location = RA.Location;
        createdRestaurant.ImagePath = RA.ImagePath;

        createdRestaurant.AddressId = RA.AddressId;
        createdRestaurant.SubscriptionId = RA.SubscriptionId;

        await _client.PostAsJsonAsync($"{Endpoints.RestaurantsEndpoint}", createdRestaurant);
        await js.InvokeVoidAsync("alert", "Restaurant Created!");
        _navManager.NavigateTo("/restaurants");
    }
}